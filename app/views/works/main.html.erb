<main>
    <section class="spotlight">
      <h2 class="spotlight_header">
        <span class="spotlight_header_prefix">Media Spotlight:</span>
        <% if @works.count > 0  %>
        <u><%= link_to "#{@works.first.title}", work_path(@works.first.id) %></u> by
          <%= @works.first.creator %>
      </h2>
      <h6 class="spotlight_description">
        <%= @works.first.votes.count %> votes - <%= @works.first.description %>
      </h6>
        <% end %>
   </section>

   <hr class="root__hr" />

  <section class="top-ten__container">
    <section class="top-ten__list-container">
      <h2 class="top-ten__header">
        Top Movies
      </h2>
      <ul class="list-group top-ten__list">
        <% @movies.each do |movie| %>
            <li class="list-group-item">
                <h4><%= link_to "#{movie.title}", work_path(movie.id) %></h4>
              <p>by <%= movie.creator %></p>
              <p><%= movie.votes.count %> votes</p>
            </li>
        <% end %>
      </ul>
    </section>

    <section class="top-ten__list-container">
      <h2 class="top-ten__header">
        Top Books
      </h2>
      <ul class="list-group top-ten__list">
        <% @books.each do |book| %>
            <li class="list-group-item">
                <h4><%= link_to "#{book.title}", work_path(book.id) %></h4>
              <p>by <%= book.creator %></p>
              <p><%= book.votes.count %> votes</p>
            </li>
        <% end %>
      </ul>
    </section>

    <section class="top-ten__list-container">
      <h2 class="top-ten__header">
        Top Albums
      </h2>
      <ul class="list-group top-ten__list">
        <% @albums.each do |album| %>
            <li class="list-group-item">
                <h4><%= link_to "#{album.title}", work_path(album.id) %></h4>
              <p>by <%= album.creator %></p>
              <p><%= album.votes.count %> votes</p>
            </li>
        <% end %>
      </ul>
    </section>
  </section>
