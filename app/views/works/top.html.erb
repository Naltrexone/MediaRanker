<section class="row spotlight">
  <div>
    <h3>
      <span class="media-spotlight-header">Media Spotlight: </span>
      <%= link_to @top.title %>
      by
      <%= @top.creator %>
    </h3>
    <p><%= @top.votes.count %> votes - <%= @top.description %></p>
  </div>
</section>

<hr class="root-hr">

<section class="top-ten-container">
  <% @categories.each do |category| %>
  <section class="top-ten">
    <h3>Top <%= category.name.capitalize %>s</h3>
    <ul>
    <% @works.where(category: category).top(10).each do |work| %>
    <li>
      <h4><%= link_to(work.title, work_path(work)) %><small> by <%= work.creator %></small></h4>
      <p><%= work.votes.count %> votes</p>
    </li>
    <% end%>
    </ul>
  </section>
  <% end %>
</section>
